# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP files
[*.php]
indent_size = 4

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Twig templates
[*.twig]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Docker files
[{Dockerfile*,*.dockerfile}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# XML files
[*.xml]
indent_size = 2
