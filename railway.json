{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "bash -c \"php bin/console doctrine:migrations:migrate --no-interaction && /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
